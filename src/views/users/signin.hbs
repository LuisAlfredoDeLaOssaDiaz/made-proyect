{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000">
        <path d="M0 0h24v24H0z" fill="none" />
        <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z" />
    </svg>
    {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}

<div class="col-md-4 mx-auto" style="background-color: rgba(229, 249, 76, 0.352); padding: 100px 0 100px 0 ">
    <div class="card"
        style="background: rgba(255, 255, 255, 0.0); border-radius: 5px; border-color:rgba(255, 255, 255, 0.0)">
        <div class="card-header">
            <strong>
                <center>
                    <h3
                        style=" background: rgba(89, 92, 94, 0.4); color: rgb(238, 231, 231); width: 50%; border-radius: 5px;">
                        SignIn</h3>
                </center>
            </strong>
            <img src="https://sheltered-lake-28843.herokuapp.com/img/png/libro.png" class="rounded-circle mx-auto d-block m-4 logo" alt="Logo" style="width: 40%;" />
        </div>

        <div class="card-body">
            <form action="/users/signin" method="POST">
                <div class="form-groub">
                    <strong> Email: </strong>
                    <input type="text" name="email" class="form-control" placeholder="Email." value="{{email}}"
                        autofocus />
                </div>
                <div class="form-group">
                    <strong> Password: </strong>
                    <input type="password" name="password" class="form-control" placeholder="Password." />
                </div>
                <br>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Signin
                    </button>
                </div>
            </form>
        </div>

    </div>

</div>