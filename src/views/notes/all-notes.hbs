<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}" class="fas fa-edit"></a>
                </h4>
                <hr>
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
                    <input type="hidden" name="_mehtos" value="DELETE">

                    <button class="btn btn-danger btn-block btn-sm" type="submit">Delete</button>

                </form>
            </div>
        </div>
        <br>
    </div>
    {{else}}
    <div class="col-md-3 mx-auto">
        <div class="card">
            <div class="card-body mx-auto">
                <p class="lead">There are not notes yet.</p>
                <hr>
                <center><a href="/notes/add" class="btn btn-success btn-block">Create One!</a></center>
            </div>
        </div>
    </div>
    {{/each}}
</div>